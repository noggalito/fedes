{{!< default}}
{{#tag}}
  <div class="blog-header">
    {{> "carousel-footer"}}
  </div>
  <div class="container">
    {{> "navigation-blog"}}
  </div>
{{/tag}}
<main id="content" class="content blog-content" role="main">
  <div class="container">
    <div class="row">
      <section>
        {{#foreach posts}}
          <div class="col-xs-12 col-sm-4 blog-post-content">
            <a href="{{url}}" class="blog-post-link">
              <figure>
                <div>
                  {{moment-date published_at format="D [de] MMMM, YYYY" locale="es"}}
                </div>
                <img src="{{image}}"
                  class="img-responsive"
                  alt="{{title}}"/>
                <div>
                  <p>{{title}}</p>
                </div>
                <div>
                  {{excerpt}}
                </div>
              </figure>
            </a>
          </div>
        {{/foreach}}
      </section>
    </div>
  </div>
  <div class="container blog-pagination">
    {{pagination limit="6"}}
  </div>
</main>
