{{!< default}}
{{#post}}
  {{! The main content area on the homepage }}
  <main id="content" class="content" role="main">
    <div class="mapFedes">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d248.760
      23556374113!2d-79.19714415621873!3d-3.9867107959038353!2m3!1f0!2f0!3f0!3m2
      !1i1024!2i768!4f13.1!3m3!1m2!1s0x91cb47e326abc97d%3A0xe48a703b8ece7dcb!2s
      PRENDHO+UTPL!5e0!3m2!1sen!2sec!4v1466042822552" frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="container gallery gallery-principal contactosSection" >
      <div>
        <h2 class="gallery-title">Comun√≠cate con nosotros</h2>
      </div>
      <div class="row colContactos">
        <div class="col-md-8">
          {{#get "posts" slug="contenido-de-contactos" as |article|}}
          {{#article}}
          {{content}}
          {{/article}}
          {{/get}}
        </div>
        <div class="col-md-4">
          <div class="directionText">
            <ul class="nav nav-pills nav-stacked">
              {{#get "posts" slug="contactos-direccion" as |article|}}
              {{> "footer-section" article=article}}
              {{/get}}
            </ul>
            <ul class="nav nav-pills nav-stacked">
              {{#get "posts" slug="contactos-fono" as |article|}}
              {{> "footer-section" article=article}}
              {{/get}}
            </ul>
          </div>
        </div>
      </div>
      <div class="row colContactos">
        <div class="col-md-5">
          <h6 class="textFormContactos">Use este formulario para enviarnos un mensaje:</h6>
          <form data-toggle="validator" role="form">
            <div class="form-group">
              <input type="text" class="form-control" id="nameInput" placeholder="nombre" required>
            </div>
            <div class="form-group">
              <input type="email" class="form-control" id="emailInput" placeholder="e-mail" required>
            </div>
            <div class="form-group">
              <textarea class="form-control" id="mensajeTextarea" rows="3" placeholder="mensaje" required ></textarea>
            </div>
            <div class="help-block with-errors"></div>
            <button type="submit" class="btn btn-primary">enviar</button>
          </form>
        </div>
      </div>
    </div>
 </main>
{{/post}}
