{{!< default}}
{{#post}}
  {{! The main content area on the homepage }}
  <main id="content" class="content contactosSection" role="main">
    <div class="mapFedes"></div>
    {{> "carousel-footer"}}

    <div class="container gallery gallery-principal" >
      {{#get "tags" filter="slug:ponte-en-contacto" as |contactoTag|}}
        {{#contactoTag}}
          {{> "gallery-title" currentTag=contactoTag}}
        {{/contactoTag}}
      {{/get}}
    </div>

    <div class="row">
      <div class="col-xs-offset-2 col-xs-8">
        <div class="directionText">
          <ul class="nav nav-pills nav-stacked">
            {{#get "posts" slug="contactos-direccion" as |article|}}
              {{> "footer-section" article=article}}
            {{/get}}
          </ul>
          <ul class="nav nav-pills nav-stacked">
            {{#get "posts" slug="contactos-fono" as |article|}}
              {{> "footer-section" article=article}}
            {{/get}}
          </ul>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-offset-2 col-xs-8">
        <form class="form-with-gray-inputs" data-toggle="validator" role="form">
          <fieldset>Use este formulario para enviarnos un mensaje:</fieldset>
          <div class="form-group">
            <input type="text" class="form-control" id="nameInput" placeholder="nombre" required>
          </div>
          <div class="form-group">
            <input type="email" class="form-control" id="emailInput" placeholder="e-mail" required>
          </div>
          <div class="form-group">
            <textarea class="form-control" id="mensajeTextarea" rows="3" placeholder="mensaje" required ></textarea>
          </div>
          <div class="help-block with-errors"></div>
          <button type="submit" class="btn btn-primary">enviar</button>
        </form>
      </div>
    </div>
  </main>
{{/post}}
