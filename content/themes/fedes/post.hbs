{{!< default}}
{{> "facebook-sdk"}}
{{#post}}
  <main id="content" class="content post-container" role="main">
    {{> "carousel-footer"}}

    <div class="container">
      {{> "post-breadcrumbs"}}

      <div class="row">
        <div class="post-contents col-xs-offset-2 col-xs-8 col-sm-8">
          <div class="post-contents--header">
            <h2>{{title}}</h2>
            <img class="img-responsive"
              style="background-image: url('{{image}}')"
            />
            <div class="post-contents--caption">
              Por: {{author autolink="false"}}, {{moment-date published_at format="D [de] MMMM [de] YYYY" locale="es"}}
            </div>
          </div>
          <div class="post-contents--content">{{content}}</div>
        </div>

        <div class="col-xs-12 post-tags-and-share">
          <div class="col-xs-offset-2 col-xs-5 post-tags">
            {{tags from="2"}}
          </div>
          <div class="col-xs-3 post-share">
            <div class="fb-share-button" data-href="{{@blog.url}}{{url}}" data-layout="icon" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{@blog.url}}{{url}}">Share</a></div>
            <span class="glyphicon glyphicon-share"></span>
            <span class="glyphicon glyphicon-share"></span>
          </div>
        </div>

        <div class="col-xs-12 col-sm-4">
          <div class="col-xs-12">
            <h2>Categorias</h2>
            <div>
              {{> "navigation-blog"}}
            </div>
          </div>
          <div class="col-xs-12">
            <h2>Otros Posts</h2>

            {{#get "posts" limit="4" include="tags" filter="tag:blog" as |posts|}}
              {{#foreach posts}}
                <div>
                  <a href="{{url}}">
                    <div>
                      {{title}}
                    </div>
                  </a>
                </div>
              {{/foreach}}
            {{/get}}
          </div>
        </div>
      </div>
    </div>
  </main>
{{/post}}
