<div class="container gallery gallery-principal">
  <div class="mainTitle">
    {{#get "tags" filter="slug:proyectos" as |proyectosPost|}}
      {{#proyectosPost}}
        <h2 class="gallery-title">{{name}}</h2>
        <p class="text-center">{{description}}</p>
      {{/proyectosPost}}
    {{/get}}
  </div>
  <div class="row projectList">
    {{#get "posts" limit="3" filter="tag:proyectos"  as |projects|}}
      {{#foreach projects}}
        <section class="col-xs-offset-2 col-xs-8 col-md-4">
          <div class="projectElement">
            <div class="img-gallery">
              <img
                class="img-responsive"
                {{#if image}}
                  style="background-image: url('{{image}}')"
                {{else}}
                  style="background-image: url('{{asset 'img/no-image.jpg'}}')"
                {{/if}}
                / >
              <div class="gallery-text-content">
                <div class="projectContent">{{content}}</div>
              </div>
            </div>
            <div class="project-name-wrapper">
              <div class="projectName">
                <p>{{title}}</p>
              </div>
            </div>
          </div>
        </section>
      {{/foreach}}
    {{/get}}
  </div>
</div>
