<div class="container carousel">
  <div id="myCarousel" class="carousel slide {{^is "index"}} carousel-main-secondary {{/is}}" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
      {{#get "posts" filter="tag:carouselimagen" as |images|}}
        {{#foreach images}}
          <div class="item">
            <div style="background-image: url('{{image}}')" class="img-responsive"></div>
            <div class="menu-carousel">
              <div class="carousel text text-nowrap">
                <h1>{{title}}</h1>
                <div class="content-wrapper">{{content}}</div>
              </div>
              <div class="carousel-controls-wrapper">
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right"  aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          </div>
        {{/foreach}}
      {{/get}}
    </div>
  </div>
</div>
{{> "carousel-footer"}}
