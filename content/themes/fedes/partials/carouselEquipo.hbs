<div class="container">
  <div class="col-md-12">
    <div class="carousel slide" id="myCarouselEquipo">
      <div class="carousel-inner cauroselEquipo">
        {{#get "posts" filter="tag:imagenequipo" as |images|}}
          {{#foreach images}}
            <div class="item">
              <div class="col-xs-12 col-sm-4 gallery-equipo">
                <a class="gallery-element" href="{{url}}">
                  <div class="img-gallery imgEquipo">
                    <img
                    class="img-responsive"
                    {{#if image}}
                    style="background-image: url('{{image}}')"
                    {{else}}
                    style="background-image: url('{{asset 'img/no-image.jpg'}}')"
                    {{/if}}
                    / >
                    <div class="gallery-text-content">
                      <div class="projectContent">{{content}}</div>
                    </div>
                  </div>
                  <div class="gallery-caption-wrapper">
                    <div class="gallery-caption">
                      <p>{{title}}</p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          {{/foreach}}
        {{/get}}
      </div>
      <div class="carousel-controls-wrapper controlsEquipo">
        <a class="left carousel-control" href="#myCarouselEquipo" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarouselEquipo" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"  aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>
